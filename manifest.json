{
  "manifest_version": 3,
  "name": "Advanced Exam Lockdown Monitor",
  "version": "3.0",
  "description": "Advanced exam monitoring with face detection, eye tracking, audio monitoring, screen sharing detection, and multiple monitor detection",
  "permissions": [
    "storage",
    "notifications",
    "scripting",
    "activeTab",
    "tabs",
    "system.display"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      
    }
  },
  "icons": {
    
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["monitor.html"],
      "matches": ["<all_urls>"]
    }
  ]
}